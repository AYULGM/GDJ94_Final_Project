<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.health.app.auth.AuthMapper">

  <select id="selectLoginUser"
          parameterType="string"
          resultType="com.health.app.auth.UserLoginView">
    SELECT
      user_id  AS userId,
      login_id AS loginId,
      password AS password,
      name     AS name
    FROM users
    WHERE login_id = #{loginId}
      AND use_yn = TRUE
    LIMIT 1
  </select>

</mapper>
